<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#F5F5F5" />

    <!-- Border color and width -->
    <stroke
        android:width="2dp"
        android:color="#CCCCCC" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Optional padding (in case you use it as a background for layouts) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
