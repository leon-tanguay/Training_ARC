<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <!-- Team Title -->
    <LinearLayout
        android:id="@+id/teamHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/teamName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team Name Here"
            android:textSize="@dimen/title_font_size"
            android:textStyle="bold"
            android:layout_marginEnd="8dp" />

        <FrameLayout
            android:layout_width="@dimen/title_icon_size"
            android:layout_height="@dimen/title_icon_size">

            <ImageView
                android:id="@+id/starIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/level_icon_24dp"
                android:contentDescription="Team Level Star" />

            <TextView
                android:id="@+id/teamLevel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="5"
                android:textSize="@dimen/level_font_size"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </FrameLayout>
    </LinearLayout>

    <!-- Dinosaur Box: 35% of screen height -->
    <LinearLayout
        android:id="@+id/dinoBox"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.35"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@drawable/box_background"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:layout_marginHorizontal="24dp">

        <!-- 🦖 Bigger Dino Image -->
        <ImageView
            android:id="@+id/dinoImage"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:src="@drawable/ic_dinosaur"
            android:scaleType="fitCenter" />

        <!-- ⏱ Timer -->
        <TextView
            android:id="@+id/timerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="6dp" /> <!-- Added space below timer -->

        <!-- 📊 Progress Info -->
        <TextView
            android:id="@+id/progressLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30,000 / 50,000"
            android:layout_marginBottom="2dp" />

        <!-- 📈 Progress Bar with minimal space below -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"
            android:progress="60"
            android:max="100"
            android:layout_marginBottom="0dp" />
    </LinearLayout>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/teammateRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_marginTop="12dp" />

</LinearLayout>
